<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_long_def"
            android:layout_marginTop="20dp"
            style="@style/title_headers" />

        <TextView
            android:id="@+id/long_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_gap"
            android:paddingLeft="20dp"
            android:scrollbars="vertical"
            android:text="longdef"
            android:textSize="18dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="2dp"
            style="@style/horizontal_divider"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_example"
            style="@style/title_headers"/>
        <TextView
            android:id="@+id/eg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:scrollbars="vertical"
            android:text="Examples"
            android:textSize="18dp"
            android:layout_marginBottom="@dimen/default_gap"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="2dp"
            style="@style/horizontal_divider"/>

        <Button
            android:id="@+id/go_to_video_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rect_border"
            android:onClick="goToVideoScreen"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="@dimen/default_gap"
            android:text="View Videos" />
        <TextView
            android:id="@+id/video_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:scrollbars="vertical"
            android:text="video url"
            android:textSize="18dp"/>

    </LinearLayout>
</ScrollView>